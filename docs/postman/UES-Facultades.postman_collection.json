{
  "info": {
    "name": "UES - Facultades API",
    "description": "API para gesti√≥n de facultades en el sistema universitario UES",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Obtener todas las facultades",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/facultades",
          "host": ["{{baseUrl}}"],
          "path": ["api", "facultades"]
        }
      },
      "response": []
    },
    {
      "name": "Obtener facultad por ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/facultades/1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "facultades", "1"]
        }
      },
      "response": []
    },
    {
      "name": "Crear nueva facultad",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"Facultad de Medicina\",\n  \"codigo\": \"FME\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/facultades",
          "host": ["{{baseUrl}}"],
          "path": ["api", "facultades"]
