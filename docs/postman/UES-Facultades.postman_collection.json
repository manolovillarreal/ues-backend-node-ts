          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"Facultad de Medicina Actualizada\",\n  \"codigo\": \"FME\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/facultades/1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "facultades", "1"]
        }
      },
      "response": []
    },
    {
      "name": "Eliminar facultad",
      "request": {
        "method": "DELETE",
